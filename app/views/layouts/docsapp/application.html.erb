<body class="layout-top-nav hold-transition skin-purple-light sidebar-mini">
  <div class="wrapper">

    <!-- Main Header -->
    <header class="fixed main-header" style="position: initial;">
      <!-- Header Navbar -->
      <nav class="navbar navbar-static-top teal-back box-shadow-3" role="navigation">
        <!-- Left Content -->
        <div class="pull-left navbar-nav navbar-nav-left">
          <!-- header logo begin -->
          <img src="<%= asset_path('footer_logo_white.png') %>" alt="Remedico">
          <!-- header logo end -->
        </div>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
          <ul class="nav navbar-nav">
            <!-- Doc Account Menu -->
            <li class="user user-menu">
              <!-- Menu Toggle Button -->
              <a href="#">
                <!-- The Doc image in the navbar-->
                <img src="<%= asset_path(current_doctor.avatar) %>" class="user-image" alt="Doc Image">
                <!-- hidden-xs hides the docname on small devices so only the image appears. -->
                <span class="hidden-xs"><%= current_doctor.email %></span>
              </a>
            </li>
            <li class="logout user user-menu">
              <%= link_to destroy_doctor_session_path, :method => "delete" do %>
                <i class="fa fa-sign-out" aria-hidden="true"></i>
              <% end %>
            </li>
            
          </ul>
