<%= content_for :body_class, "inner_body white_back pad_15" %>
<main id="form-step-3">
    <section class="inner_content">
        <div class="container">
            <div class="row contactpopup_info">
                <div class="col-sm-12 box pad_0 margin_0">
        <div class="row space_bottom">
          <div class="col-sm-12 col-md-6 col-md-offset-3">
            <div><h1 style="font-size: 38px;">Almost done!</h1></div>
            <div><p style="font-size: 18px;">The final step is payment. We need to ask for payment now so our dermatologist can prepare your treatment plan.</p></div>
            <hr class="border_transparent space_top space_bottom"></hr>
            <div><p style="font-size: 18px;">How would you like to pay, <span customer-name><%= current_user.name %></span>?</p></div>
          </div>
          </div>
          <div class="row">
          <div class="col-sm-12">
            <%= form_tag '/payment', method: :post do %>
            <div class="text-center">
              <%= submit_tag "CREDIT CARD", name: "type", class: "list_btn_dark hover space_bottom" %>
            </div>
            <div class="text-center">
              <%= submit_tag "DEBIT CARD", name: "type", class: "list_btn_dark hover space_bottom" %>
            </div>
            <div class="text-center">
              <%= submit_tag "NET BANKING", name: "type", class: "list_btn_dark hover space_bottom" %>
            </div>
            <% end %>
          </div>
        </div>

        <div class="col-sm-12 space_top">
          <img src="" alt="Shield" style="display: inline-block; height: 24px; width: 24px; vertical-align: middle;">
          <span style="margin-left: 4px; margin-right: 4px;">Secure payment powered by</span>
          <img src="https://test.payu.in/images/payu_logo.png" class="img-responsive" alt="PayU Biz" style="display: inline-block; height: 40px; width: 60px;">
        </div>
                </div>
            </div>
        </div>
    </section>
</main>
