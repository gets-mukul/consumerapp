<%= content_for :body_class, "inner_body white_back" %>
<main id="form-step-4" style="width: 100%; overflow-y: hidden; overflow-x: hidden">
  <section class="inner_content pad_15">
    <div class="container">
      <div class="row contactpopup_info">
        <div class="col-sm-12 box pad_0 margin_0">
          <div class="row space_bottom">
            <div class="col-sm-12 col-md-6 col-md-offset-3">
              <div><h1 style="font-size: 28px;">Almost done, <span customer-name><%= current_user.name.titleize %></span>!</h1></div>
              <div>
                <p class="p_16 left-align margin_t_25">
                  The final step is payment of the consultation fee of Rs <%= @amount %>. 
                  You will then receive your treatment plan within 24 hours.
                </p>
              </div>


              <div class="row desktop">
                <div class="col-md-12 margin_t_25">
                  <img src="<%= asset_path("progress_bar_web.png") %>" />
                </div>
              </div>

              <div class="row mobile">
                <div class="col-md-12 margin_t_25">
                  <img src="<%= asset_path("progress_bar_mobile.png") %>" />
                </div>
              </div>

              <hr class="pad_0 margin_25" />
              <div class="left-align">
                <h5 class="sub-title space_top">Who will provide my treatment plan?</h5>
                <p class="p_16 margin_b_25 space_top_sm">
                  One of the available doctors below will prepare your treatment plan.
                </p>
                <div class="slider mobile" id="slider" style="padding-left: -15px;">
                  <div class="holder">
                    <div class="slide">
                      <img src="<%= asset_path("abhishek.jpg") %>" alt="Dr. Abhishek Omchery">
                      <div class="carousel-img-details">
                        <div class="doc-name">Dr. Abhishek Omchery</div>
                        <div class="doc-qualification">MD (Dermatology & VD)</div>
                      </div>
                    </div>
                    <div class="slide">
                      <img src="<%= asset_path("ankita.jpg") %>" alt="Dr. Ankita Sawant">
                      <div class="carousel-img-details">
                        <div class="doc-name">Dr. Ankita Sawant</div>
                        <div class="doc-qualification">MBBS, DDV</div>
                      </div>
                    </div>
                    <div class="slide">
                      <img src="<%= asset_path("sonam.jpg") %>" alt="Dr. Sonam Vimadalal">
                      <div class="carousel-img-details">
                        <div class="doc-name">Dr. Sonam Vimadalal</div>
                        <div class="doc-qualification">MBBS, DDVL</div>
                      </div>
                    </div>
                    <div class="slide">
                      <img src="<%= asset_path("gautam.jpg") %>" alt="Dr. Gautam Dethe">
                      <div class="carousel-img-details">
                        <div class="doc-name">Dr. Gautam Dethe</div>
                        <div class="doc-qualification">MBBS, DDV, DNB</div>
                      </div>
                    </div>
                    <div class="slide">
                      <img src="<%= asset_path("gaurangi.jpg") %>" alt="Dr. Gaurangi Shrawat">
                      <div class="carousel-img-details">
                        <div class="doc-name">Dr. Gaurangi Shrawat</div>
                        <div class="doc-qualification">MD (Dermatology & VD)</div>
                      </div>
                    </div>
                  </div>
                </div>


                <div class="carousel-wrapper space_bottom desktop">
                  <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Wrapper for carousel items -->
                    <div class="carousel-inner">
                      <div class="item active">
                        <img src="<%= asset_path("abhishek.jpg") %>" alt="Dr. Abhishek Omchery">
                        <div class="carousel-img-details">
                          <div class="doc-name">Dr. Abhishek Omchery</div>
                          <div class="doc-qualification">MD (Dermatology & VD)</div>
                        </div>
                      </div>
                      <div class="item">
                        <img src="<%= asset_path("ankita.jpg") %>" alt="Dr. Ankita Sawant">
                        <div class="carousel-img-details">
                          <div class="doc-name">Dr. Ankita Sawant</div>
                          <div class="doc-qualification">MBBS, DDV</div>
                        </div>
                      </div>
                      <div class="item">
                        <img src="<%= asset_path("sonam.jpg") %>" alt="Dr. Sonam Vimadalal">
                        <div class="carousel-img-details">
                          <div class="doc-name">Dr. Sonam Vimadalal</div>
                          <div class="doc-qualification">MBBS, DDVL</div>
                        </div>
                      </div>
                      <div class="item">
                        <img src="<%= asset_path("gautam.jpg") %>" alt="Dr. Gautam Dethe">
                        <div class="carousel-img-details">
                          <div class="doc-name">Dr. Gautam Dethe</div>
                          <div class="doc-qualification">MBBS, DDV, DNB</div>
                        </div>
                      </div>
                      <div class="item">
                        <img src="<%= asset_path("gaurangi.jpg") %>" alt="Dr. Gaurangi Shrawat">
                        <div class="carousel-img-details">
                          <div class="doc-name">Dr. Gaurangi Shrawat</div>
                          <div class="doc-qualification">MD (Dermatology & VD)</div>
                        </div>
                      </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                      <span class="glyphicon glyphicon-menu-left"></span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                      <span class="glyphicon glyphicon-menu-right"></span>
                    </a>

                  </div>
                </div>
              </div>

              <hr class="pad_0 margin_25" />

              <div class="row left-align">
                  <div class="col-sm-12">
                      <div style="margin-top: 10px;">
                        <h5 class="sub-title">How can I pay?</h5>
                        <p class="p_16">
                          You can pay with Credit Card, Debit Card, Net Banking or Paytm.
                        </p>
                      </div>
                      <div>
                        <p class="p_16" style="padding-top: 20px;">
                          <b>
                            <span class="payment-total">Total payment: </span>
                            <span class="payment-amount">Rs. <%= @amount %></span>
                          </b>
                        </p>
                      </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="row">

      <div class="col-sm-12 text-center" style="margin-bottom: 15px; margin-top: 30px;">
        <i class="fa fa-shield" style="display: inline-block; vertical-align: middle;" aria-hidden="true"></i>
        <span style="margin-left: 4px; margin-right: 4px;">Secure payment powered by</span>
        <img src="<%= asset_path("paytm.png") %>" class="img-responsive" alt="Paytm" style="display: inline-block; max-height: 25px; margin-top: -10px;">
      </div>

      <div class="col-sm-12 sticky-footer">
        <%= form_tag '/consult/payment', method: :post do %>
        <div class="text-center">

            <%= button_tag(name: "type", class: "list_btn_dark hover sticky-footer") do %>
               PAY FOR YOUR TREATMENT PLAN
            <% end %>
        </div>
        <% end %>
      </div>


    </div>
  </section>

  <section>
    <div class="col-sm-12 space_top space_bottom text-center no-scroll" style="" id="fixed-footer">
      <h5 class="sub-title">Still have questions?</h5>
        <p class="p_16">
          Feel free to contact us at <span><nobr><a href="tel:+918433484696"> &nbsp; <span class="fa fa-whatsapp icon-blue"></span>&nbsp;+91 8433 848 969</a></nobr></span>
        </p>
    </div> 
  </section>

</main>


<script type="text/javascript">
  

$(function() {
  $("button.list_btn_dark").on('click', function () {
      ga('send', 'event', { eventCategory: 'consultation', eventAction: 'clickPayButton'});
  });
});

</script>
