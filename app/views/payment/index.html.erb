<%= content_for :body_class, "inner_body white_back pad_15" %>
<main id="form-step-3">
    <section class="inner_content">
        <div class="container">
            <div class="row contactpopup_info">
                <div class="col-sm-12 box pad_0 margin_0">
        <div class="row space_bottom">
          <div class="col-sm-12 col-md-6 col-md-offset-3">
            <div><h1 style="font-size: 28px;">Almost done, <span customer-name><%= current_user.name %></span>!</h1></div>
            <div><p style="font-size: 16px; line-height: 1.2; margin-top: 20px">The final step is payment. We need to ask for payment now so our dermatologist can prepare your treatment plan.</p></div>
            <hr class="border_transparent space_top space_bottom"></hr>
            <div><p style="font-size: 16px; line-height: 1.2">You can pay by Credit Card, Debit Card or Net Banking.</p></div>
          </div>
          </div>
          <div class="row">
          <div class="col-sm-12">
            <%= form_tag '/consult/payment', method: :post do %>
            <div class="text-center">
              <%= submit_tag "PAY NOW", name: "type", class: "list_btn_dark hover" %>
            </div>
            <% end %>
          </div>
        </div>

        <div class="col-sm-12 space_top">
          <i class="fa fa-shield" style="display: inline-block; vertical-align: middle;" aria-hidden="true"></i>
          <span style="margin-left: 4px; margin-right: 4px;">Secure payment powered by</span>
          <img src="<%= asset_path("payu_money.png") %>" class="img-responsive" alt="PayU Money" style="display: inline-block; max-height: 10px;">
        </div>
                </div>
            </div>
        </div>
    </section>
</main>
