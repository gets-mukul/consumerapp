<main class="margin_t_15">
  <section class="inner_content">
    <div class="container">
      <div class="row contactpopup_info margin_t_15">
        <div class="col-sm-12 box pad_0 margin_0">
          <div class="row space_bottom">
            <div class="col-sm-12 col-md-6 col-md-offset-3">
              <div>
                <div class="icon_circle_back_lg green_back">
                  <i class="fa fa-check"></i>
                </div>
              </div>
              <div><h1 class="space_top" style="font-size: 28px">Consultation Successful</h1></div>
              <div style="margin-top: 20px">
                <p style="font-size: 16px; line-height: 1.4; margin-bottom: 20px">
