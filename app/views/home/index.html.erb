<div id="myModal" class="modal fade contactpopup_info" role="dialog">
    <div class="modal-dialog contact_dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="mainform_popup">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4>Let us contact you<span>If you'd like to consult a specialist, or just want more info, fill in your details and we'll contact you.</span>
                    </h4>
                </div>
                <div class="modal-body">
                    <form role="form" action="https://formbox.es/NgH3bFiWYpY6HuPBRAMiXryt" method="post"
                          class="ig-form">
                        <div class="input-field form-group">
                            <input type="text" class="form-control" name="name">
                            <label>Name</label>
                            <i class="fa fa-user"></i></div>
                        <div class="input-field form-group">
                            <input type="text" class="form-control" name="email">
                            <label>Email</label>
                            <i class="fa fa-envelope"></i></div>
                        <div class="input-field form-group">
                            <input type="text" class="form-control" name="mobile">
                            <label>Mobile</label>
                            <i class="fa fa-phone"></i></div>
                        <div class="btns_info">
                            <button type="submit" class="letus_btn text-center senddetails_btn"
                                    onClick="ga('send', 'event', { eventCategory: 'contactUs', eventAction: 'submit'});">
                                Send details
                            </button>
                        </div>
                        <div class="thanks_msg"></div>
                    </form>
                </div>
            </div>
            <div class="thanksmsg_popup">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <h4>Thanks! <span>Our team will get in touch with you shortly...</span></h4>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {

        $(".thanksmsg_popup").hide();
        $('.ig-form').submit(function (e) {
            e.preventDefault();
            var url = $(this).attr('action');
            var data = $(this).serialize()
            console.log(data);
            $.ajax({
                type: 'post',
                crossDomain: true,
                jsonp: false,
                url: url,
                data: data,
                success: function (response) {
                    // console.log('done');
                    console.log(response);
                    $('.mainform_popup').hide();
                    $(".thanksmsg_popup").show();
                    setTimeout(function () {
                        $('.thanksmsg_popup .close').trigger('click');
                    }, 3000);
                },
                error: function (response) {
                    // console.log('error');
                    console.log(response);
                    $('.mainform_popup').hide();
                    $(".thanksmsg_popup").show();
                    setTimeout(function () {
                        $('.thanksmsg_popup .close').trigger('click');
                    }, 3000);
                }
            });
        });

