<%= form_for @patient, url: '/consult/patients', remote: true do |f| %>
  <div class="row text-danger" id="error_explanation"></div>
  <div class="row">
    <div class="col-sm-12 col-md-4 col-md-offset-4">
      <div class="control-group input-field form-group">
        <%= f.text_field :name, class: "form-control", :required => true %>
        <%= f.label :name %>
        <i class="fa fa-user"></i>
      </div>
      <div class="control-group input-field form-group">
        <%= f.email_field :email, class: "form-control", :required => true, :"data-validation-email-message" => "You need to enter the correct email format.", :"data-validation-required-message" => "You need to enter an email." %>
        <p class="help-block"></p>
        <%= f.label :email, class: "control-label" %>
        <i class="fa fa-envelope"></i>
      </div>
      <div class="control-group input-field form-group">
          <%= f.telephone_field :mobile, class: "form-control", :minlength => 10, :maxlength => 15, :required => true, :"data-validation-required-message" => "You need to enter a mobile no." %>
          <p class="help-block"></p>
          <%= f.label :mobile %>
          <i class="fa fa-phone"></i>
      </div>
      <div class="btns_info text-center">
        <div class="text-center">
          <%= f.submit 'CONTINUE', class: "list_btn_dark space_bottom form-stepper-1" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
