<% content_for :typeform_head do %>
<style type="text/css">
  html {
    margin: 0;
    height: 100%;
    overflow: hidden;
  }
  iframe {
    position: absolute;
    left:0;
    right:0;
    bottom:0;
    top:0;
    border:0;
  }
</style>
<% end %>
<i class="fa fa-spinner fa-spin" style="font-size:32px; margin-top: 350px; text-align:center; display: relative; width: 100%;"></i>
<iframe id="typeform-full" width="100%" height="100%" frameborder="0" src="<%= @condition_form %>"></iframe>
<script type="text/javascript" src="https://s3-eu-west-1.amazonaws.com/share.typeform.com/embed.js"></script>
