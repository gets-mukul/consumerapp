                height: 100%;
            }

            .item-icon {
                float: left;
                display: block;
                width: 25%;
            }

            .item-content {
                margin-left: 27%;
                margin-right: 4%;
                margin-top: 4%;
                text-align: left;
            }

            .item-content h4 {
                font-size: 14px;
                font-family: arial;
                letter-spacing: 0.2px;
                color: #17a6b0;
